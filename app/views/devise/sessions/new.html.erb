
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "custom-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "custom-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:"check" %>
      <%= f.label :remember_me, class:"rem" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "form-button" %>
  </div>
<% end %>
<div class="links">
  <%= render "devise/shared/links" %>
</div>